extends ../layout

block content

  // Первое навигационное поле
  header.header
    .container
      .header-content
        a.logo(href='/')
          i.fas.fa-spray-can
          span Клининговая компания

  .page-container
    .navigation-links
      a.back-link(href='/pricelists') ← Назад к списку прейскурантов
    
    .content-card
      .profile-header
        h1.page-title= title
  
      .profile-content
        form#pricelistForm.profile-form
          .form-section
            h2.section-title Основная информация
            
            .form-grid
              .form-group
                label(for="editlabel") Название:
                if can_view_pricelists
                  input#editlabel(type='text', value=pricelist.label, name="label")
                else
                  .form-value= pricelist.label
              
              .form-group
                label(for="editvalidFrom") Дата начала действия:
                if can_view_pricelists
                  - 
                    var validFromValue = '';
                    if (pricelist.validfrom) {
                      try {
                        var validFromDate = new Date(pricelist.validfrom);
                        if (!isNaN(validFromDate.getTime())) {
                          validFromValue = validFromDate.toISOString().split('T')[0];
                        }
                      } catch(e) {
                        validFromValue = '';
                      }
                    }
                  input#editvalidFrom(type='date', value=validFromValue, name="validFrom")
                else
                  - 
                    var validFromDisplay = '-';
                    if (pricelist.validfrom) {
                      try {
                        var validFromDate = new Date(pricelist.validfrom);
                        if (!isNaN(validFromDate.getTime())) {
                          validFromDisplay = validFromDate.toLocaleDateString('ru-RU');
                        }
                      } catch(e) {
                        validFromDisplay = 'Неверный формат даты';
                      }
                    }
                  .form-value= validFromDisplay
              
              .form-group
                label(for="editvalidTo") Дата окончания действия:
                if can_view_pricelists
                  - 
                    var validToValue = '';
                    if (pricelist.validto) {
                      try {
                        var validToDate = new Date(pricelist.validto);
                        if (!isNaN(validToDate.getTime())) {
                          validToValue = validToDate.toISOString().split('T')[0];
                        }
                      } catch(e) {
                        validToValue = '';
                      }
                    }
                  input#editvalidTo(type='date', value=validToValue, name="validTo")
                else
                  - 
                    var validToDisplay = '-';
                    if (pricelist.validto) {
                      try {
                        var validToDate = new Date(pricelist.validto);
                        if (!isNaN(validToDate.getTime())) {
                          validToDisplay = validToDate.toLocaleDateString('ru-RU');
                        }
                      } catch(e) {
                        validToDisplay = 'Неверный формат даты';
                      }
                    }
                  .form-value= validToDisplay
              
              .form-group
                label(for="editisActive") Статус:
                if can_view_pricelists
                  select#editisActive(name="isActive")
                    option(value="true", selected=pricelist.isactive) Активен
                    option(value="false", selected=!pricelist.isactive) Неактивен
                else
                  .form-value
                    if pricelist.isactive
                      span.status-badge.active Активен
                    else
                      span.status-badge.inactive Неактивен

              .form-actions
                .buttons-row
                  if can_view_pricelists
                    button.primary-button#editSaveButton(type="button") Сохранить изменения
                    button.danger-button#deleteButton(type="button") Удалить прейскурант
                  else
                    .no-permission-message У вас нет прав для редактирования прейскуранта

        // Секция для добавления новой позиции
        if can_view_pricelists && allServices
          .form-section
            h2.section-title Добавить позицию в прейскурант
            
            form#addItemForm.add-item-form
              .form-grid
                .form-group
                  label(for="selectService") Услуга:
                  select#selectService(name="service_id")
                    option(value="") Выберите услугу
                    each service in allServices
                      option(value=service.id)= service.label + (service.description ? ' (' + service.description + ')' : '')
                
                .form-group
                  label(for="inputPrice") Цена (руб./м2):
                  input#inputPrice(type="number", name="price", min="0", placeholder="0")
                
                .form-group
                  label &nbsp;
                  button.secondary-button(type="button" onclick="addPricelistItem()") Добавить позицию

        if pricelistItems && pricelistItems.length > 0
          .info-section
            h2.section-title Позиции прейскуранта
            
            .table-container
              table.data-table.center-align
                thead
                  tr 
                    th Услуга
                    th Описание услуги
                    th Цена за м2
                    th Действия
                tbody
                  each item in pricelistItems
                    tr(id="item-row-" + item.id)
                      td= item.service_label
                      td= item.service_description || '-'
                      td= item.price + ' руб.'
                      td
                        if can_view_pricelists
                          button.danger1-button(
                            type="button"
                            onclick=`deletePricelistItem(${item.id})`
                          ) Удалить
        else
          .info-section
            .empty-message В этом прейскуранте нет позиций

    #deleteConfirmModal.modal-window(style="display: none;")
      .modal-content
        .modal-header
          h3 Подтверждение удаления
          button.modal-close#deleteModalClose ×
        .modal-body
          .warning-message
            .warning-icon ⚠️
            .warning-text
              h4 Вы уверены, что хотите удалить прейскурант?
              p
                strong= pricelist.label
              p Это действие нельзя отменить. Все данные прейскуранта будут удалены безвозвратно.
        .modal-footer
          button.secondary-button#cancelDelete Отмена
          button.danger-button#confirmDelete Удалить

  script.
    // Получаем ID прейскуранта из URL
    const pathSegments = window.location.pathname.split('/');
    const pricelistId = pathSegments[pathSegments.length - 1];
    
    document.addEventListener('DOMContentLoaded', function() {
      const saveButton = document.getElementById('editSaveButton');
      const deleteButton = document.getElementById('deleteButton');
      const deleteModal = document.getElementById('deleteConfirmModal');
      const deleteModalClose = document.getElementById('deleteModalClose');
      const cancelDeleteButton = document.getElementById('cancelDelete');
      const confirmDeleteButton = document.getElementById('confirmDelete');
      
      // Закрытие модального окна удаления
      function closeDeleteModal() {
        if (deleteModal) {
          deleteModal.style.display = 'none';
          document.body.style.overflow = 'auto';
        }
      }
      
      // Обработка сохранения
      if (saveButton) {
        saveButton.addEventListener('click', async function() {
          const formData = {
            label: document.getElementById('editlabel').value.trim(),
            validFrom: document.getElementById('editvalidFrom').value,
            validTo: document.getElementById('editvalidTo').value || null,
            isActive: document.getElementById('editisActive').value === 'true'
          };
          
          if (!formData.label || !formData.validFrom) {
            alert('Заполните название и дату начала действия');
            return;
          }
          
          saveButton.disabled = true;
          saveButton.textContent = 'Сохранение...';
          
          try {
            const response = await fetch(`/pricelists/update/${pricelistId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData)
            });
            
            const data = await response.json();
            
            if (data.msg === '') {
              alert('Данные прейскуранта успешно обновлены');
            } else {
              alert('Ошибка: ' + data.msg);
            }
            
          } catch (error) {
            console.error('Error:', error);
            alert('Ошибка при обновлении данных');
          } finally {
            saveButton.disabled = false;
            saveButton.textContent = 'Сохранить изменения';
          }
        });
      }
      
      // Обработка удаления
      if (deleteButton) {
        deleteButton.addEventListener('click', function() {
          if (deleteModal) {
            deleteModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
          }
        });
      }
      
      if (deleteModalClose) {
        deleteModalClose.addEventListener('click', closeDeleteModal);
      }
      
      if (cancelDeleteButton) {
        cancelDeleteButton.addEventListener('click', closeDeleteModal);
      }
      
      if (deleteModal) {
        deleteModal.addEventListener('click', function(event) {
          if (event.target === deleteModal) {
            closeDeleteModal();
          }
        });
      }
      
      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && deleteModal && deleteModal.style.display === 'flex') {
          closeDeleteModal();
        }
      });
      
      if (confirmDeleteButton) {
        confirmDeleteButton.addEventListener('click', async function() {
          confirmDeleteButton.disabled = true;
          confirmDeleteButton.textContent = 'Удаление...';
          
          try {
            const response = await fetch(`/pricelists/delete/${pricelistId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
              }
            });
            
            const data = await response.json();
            
            if (data.msg === '') {
              alert('Прейскурант успешно удалён');
              window.location.href = '/pricelists';
            } else {
              alert('Ошибка: ' + data.msg);
              closeDeleteModal();
            }
            
          } catch (error) {
            console.error('Error:', error);
            alert('Ошибка при удалении прейскуранта');
          } finally {
            confirmDeleteButton.disabled = false;
            confirmDeleteButton.textContent = 'Удалить';
          }
        });
      }
    });

    // Функция для добавления позиции в прейскурант
    async function addPricelistItem() {
      const serviceId = document.getElementById('selectService').value;
      const price = document.getElementById('inputPrice').value;
      
      if (!serviceId || !price) {
        alert('Выберите услугу и укажите цену');
        return;
      }
      
      if (parseInt(price) < 0) {
        alert('Цена не может быть отрицательной');
        return;
      }
      
      try {
        const response = await fetch(`/pricelists/${pricelistId}/add-item`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            service_id: serviceId,
            price: parseInt(price)
          })
        });
        
        const data = await response.json();
        
        if (data.msg === '') {
          alert('Позиция успешно добавлена');
          window.location.reload();
        } else {
          alert('Ошибка: ' + data.msg);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Ошибка при добавлении позиции');
      }
    }

    // Функция для удаления позиции из прейскурант
    async function deletePricelistItem(itemId) {
      if (!confirm('Вы уверены, что хотите удалить эту позицию?')) {
        return;
      }
      
      try {
        const response = await fetch(`/pricelists/item/${itemId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          }
        });
        
        const data = await response.json();
        
        if (data.msg === '') {
          alert('Позиция успешно удалена');
          // Удаляем строку из таблицы без перезагрузки страницы
          const row = document.getElementById('item-row-' + itemId);
          if (row) row.remove();
          
          // Если строк не осталось, показываем сообщение
          const tableBody = document.querySelector('.data-table tbody');
          if (!tableBody || tableBody.children.length === 0) {
            window.location.reload();
          }
        } else {
          alert('Ошибка: ' + data.msg);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Ошибка при удалении позиции');
      }
    }

