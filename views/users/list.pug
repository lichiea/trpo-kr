extends ../layout

block content
  header.header
    .container
      .header-content
        a.logo(href='/')
          i.fas.fa-spray-can
          span Клининговая компания

  .page-container
    h1.page-title= title
    
    // Панель фильтрации и поиска
    .filter-panel
      form.filter-form(action="/users", method="GET")
        .filter-grid
          .filter-group
            label.filter-label(for="search") Поиск по ФИО/логину:
            .search-box
              input.search-input(
                type="text", 
                id="search", 
                name="search", 
                placeholder="Введите ФИО или логин...",
                value=current_search || ''
              )
              button.search-button(type="submit")
                i.fas.fa-search
        
          .filter-group
            label.filter-label(for="role") Фильтр по роли:
            select.filter-select(id="role", name="role")
              option(value="all") Все роли
              each role in roles
                option(
                  value=role, 
                  selected=(current_role === role)
                )= role
        
          .filter-actions
            button.primary-button(type="submit") Применить
            a.primary1-button(href="/users") Сбросить
    
    if can_view_users
      .actions-panel
        button.primary-button(id='create_user') Создать пользователя
    
    .content-card
      if users && users.length > 0
        .results-info
          span Найдено пользователей: #{users.length}
          if current_search || current_role && current_role !== 'all'
            span.filter-tags
              if current_search
                .filter-tag
                  span Поиск: "#{current_search}"
                  a.remove-filter(href=`/users?role=${current_role || 'all'}`) ×
              if current_role && current_role !== 'all'
                .filter-tag
                  span Роль: #{current_role}
                  a.remove-filter(href=`/users?search=${current_search || ''}`) ×
        
        .table-container
          table.data-table
            thead
              tr 
                th ID
                th Логин
                th ФИО
                th Тип пользователя
                th Роль
            tbody
              each user in users
                tr
                  td
                    a(href='/users/' + user.id)= user.id
                  td
                    a(href='/users/' + user.id)= user.login
                  td= user.full_name || '-'
                  td
                    .user-type-badge(class=user.user_type === 'Сотрудник' ? 'badge-employee' : user.user_type === 'Клиент' ? 'badge-client' : 'badge-user')
                      = user.user_type
                  td
                    .role-badge(class=user.roleClass)
                      = user.id_role
      else
        .empty-state
          if current_search || (current_role && current_role !== 'all')
            p Нет пользователей, соответствующих критериям поиска
            a.secondary-button(href="/users") Показать всех пользователей
          else
            p Нет пользователей в базе данных

    div#create_user_popup.modal-window(style="display:none")
      .modal-content
        .modal-header
          h3 Создать пользователя
          button.modal-close#create_user_popup_close ×
        .modal-body
          form.modal-form#createUserForm
            .form-group
              label(for="inpfio") Фамилия И.О. *
              input#inpfio(type="text" placeholder="Иванов И. И.")
            
            .form-group
              label(for="inpphone") Телефон
              input#inpphone(type="text" placeholder="89371234567")
            
            .form-group
              label(for="inpemail") Email
              input#inpemail(type="email" placeholder="user@example.com")
            
            .form-group
              label(for="inpuser_type") Тип пользователя *
              select#inpuser_type(name="user_type")
                option(value="") Выберите тип
                each type in user_types
                  option(value=type)= type
            
            // Поля для сотрудника (скрыты по умолчанию)
            #employeeFields(style="display: none;")
              .form-group
                label(for="inpposition_d") Должность
                input#inpposition_d(type="text" placeholder="Старший клинер")
              
              .form-group
                label(for="inpspecialization") Специализация
                input#inpspecialization(type="text" placeholder="Клинер офисных помещений")
              
              .form-group
                label(for="inpid_role") Роль сотрудника *
                select#inpid_role(name="id_role")
                  option(value="") Выберите роль
                  option(value="Администратор") Администратор
                  option(value="Менеджер") Менеджер
                  option(value="Бригадир") Бригадир
                  option(value="Клинер") Клинер
            
            // Поля для клиента (скрыты по умолчанию)
            #clientFields(style="display: none;")
              .form-group
                label(for="inptype_l") Тип лица *
                select#inptype_l(name="type_l")
                  option(value="") Выберите тип
                  each type in client_types
                    option(value=type)= type
            
            .form-group
              label(for="inplogin") Логин *
              input#inplogin(type="text" placeholder="user123")
            
            .form-group
              label(for="inppass") Пароль *
              input#inppass(type="password" placeholder="********")
        .modal-footer
          button.secondary-button#cancel_create_user Отменить
          button.primary-button#submit_create_user Создать

  script(src="https://code.jquery.com/jquery-3.6.0.min.js")
  script.
    $(document).ready(function(){
        // Переменные для элементов
        const userTypeSelect = $('#inpuser_type');
        const employeeFields = $('#employeeFields');
        const clientFields = $('#clientFields');
        const roleSelect = $('#inpid_role');
        const clientTypeSelect = $('#inptype_l');
        
        // Обработчик изменения типа пользователя
        userTypeSelect.change(function() {
            const selectedType = $(this).val();
            
            // Скрываем все дополнительные поля
            employeeFields.hide();
            clientFields.hide();
            
            // Сбрасываем обязательные поля
            roleSelect.removeAttr('required');
            clientTypeSelect.removeAttr('required');
            
            // Показываем соответствующие поля
            if (selectedType === 'Сотрудник') {
                employeeFields.show();
                roleSelect.attr('required', 'required');
            } else if (selectedType === 'Клиент') {
                clientFields.show();
                clientTypeSelect.attr('required', 'required');
            }
        });
        
        $('#create_user').click(function(e){
            $('#create_user_popup').show()
        })

        $('#create_user_popup_close').click(function(e){
            $('#create_user_popup').hide()
            clearForm()
        })

        $('#cancel_create_user').click(function(e){
            $('#create_user_popup').hide()
            clearForm()
        })

        function clearForm() {
            $('#inpfio').val('')
            $('#inpphone').val('')
            $('#inpemail').val('')
            $('#inpuser_type').val('')
            $('#inpposition_d').val('')
            $('#inpspecialization').val('')
            $('#inpid_role').val('')
            $('#inptype_l').val('')
            $('#inplogin').val('')
            $('#inppass').val('')
            
            // Скрываем дополнительные поля
            employeeFields.hide();
            clientFields.hide();
        }

        $('#submit_create_user').click(function(e){
            e.preventDefault()

            let data = {
                fio: $('#inpfio').val(),
                phone: $('#inpphone').val(),
                email: $('#inpemail').val(),
                user_type: $('#inpuser_type').val(),
                login: $('#inplogin').val(),
                pass: $('#inppass').val()
            };

            // Добавляем поля в зависимости от типа пользователя
            if (data.user_type === 'Сотрудник') {
                data.position_d = $('#inpposition_d').val();
                data.specialization = $('#inpspecialization').val();
                data.id_role = $('#inpid_role').val();
            } else if (data.user_type === 'Клиент') {
                data.type_l = $('#inptype_l').val();
            }

            // Валидация общих полей
            if (!data.fio || !data.login || !data.pass || !data.user_type) {
                alert('Пожалуйста, заполните все обязательные поля (ФИО, логин, пароль и тип пользователя)');
                return;
            }

            // Валидация для сотрудника
            if (data.user_type === 'Сотрудник' && !data.id_role) {
                alert('Для сотрудника необходимо указать роль');
                return;
            }

            // Валидация для клиента
            if (data.user_type === 'Клиент' && !data.type_l) {
                alert('Для клиента необходимо указать тип лица');
                return;
            }

            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: '/users/create',
                dataType: 'JSON'
            }).done(function( response ) {
                if (response.msg === '') {
                    alert('Пользователь создан')
                    window.location.reload()
                }
                else {
                    alert(response.msg)
                }
            }).fail(function(xhr, status, error) {
                console.error('Error:', error);
                alert('Ошибка при создании пользователя: ' + error);
            });
        });

        window.addEventListener('click', function(event) {
            if (event.target === $('#create_user_popup')[0]) {
                $('#create_user_popup').hide()
                clearForm()
            }
        });
        
        // Автосабмит при изменении селекта роли
        $('#role').change(function() {
            if ($(this).val() !== 'all') {
                $('.filter-form').submit();
            }
        });
    });

    // Функция для получения класса роли (для цветовых стилей)
    function getRoleClass(role) {
      const roleClasses = {
        'Администратор': 'role-admin',
        'Менеджер': 'role-manager',
        'Бригадир': 'role-taskmaster',
        'Клинер': 'role-cleaner',
        'Клиент': 'role-client'
      };
      return roleClasses[role] || 'role-default';
    }

