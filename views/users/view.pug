  script.
    $(document).ready(function(){
        // –ü–æ–ª—É—á–∞–µ–º ID –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏–∑ URL
        const pathSegments = window.location.pathname.split('/');
        const userId = pathSegments[pathSegments.length - 1];
        
        // ============ –û–ë–†–ê–ë–û–¢–ö–ê –°–û–•–†–ê–ù–ï–ù–ò–Ø ============
        $('#editSaveButton').click(function(e){
            e.preventDefault();
            
            let data = {
                login: $('#editlogin').val().trim(),
                pass: $('#editpass').val().trim(),
                id_role: $('#editid_role').val()
            };
            
            // –í–∞–ª–∏–¥–∞—Ü–∏—è
            if (!data.login || !data.id_role) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è (–ª–æ–≥–∏–Ω –∏ —Ä–æ–ª—å)');
                return;
            }
            
            // –ï—Å–ª–∏ –ø–∞—Ä–æ–ª—å –ø—É—Å—Ç–æ–π, –Ω–µ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º –µ–≥–æ
            if (data.pass === '') {
                delete data.pass;
            }
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            const button = $(this);
            button.prop('disabled', true);
            button.html('<span class="loading-spinner"></span> –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ...');
            
            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: '/users/update/' + userId,
                dataType: 'JSON'
            }).done(function( response ) {
                if (response.msg === '') {
                    alert('–î–∞–Ω–Ω—ã–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —É—Å–ø–µ—à–Ω–æ –æ–±–Ω–æ–≤–ª–µ–Ω—ã');
                    window.location.reload();
                }
                else {
                    alert(response.msg);
                }
            }).fail(function(xhr, status, error) {
                console.error('Error:', error);
                alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ' + error);
            }).always(function() {
                button.prop('disabled', false);
                button.text('–°–æ—Ö—Ä–∞–Ω–∏—Ç—å –∏–∑–º–µ–Ω–µ–Ω–∏—è');
            });
        });
        
        // ============ –û–ë–†–ê–ë–û–¢–ö–ê –£–î–ê–õ–ï–ù–ò–Ø ============
        // –û—Ç–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
        $('#deleteButton').click(function(){
            $('#deleteConfirmModal').show();
            $('body').css('overflow', 'hidden');
        });
        
        // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
        $('#deleteModalClose, #cancelDelete').click(function(){
            $('#deleteConfirmModal').hide();
            $('body').css('overflow', 'auto');
        });
        
        // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –æ–∫–Ω–∞
        $(window).click(function(event){
            if ($(event.target).is('#deleteConfirmModal')) {
                $('#deleteConfirmModal').hide();
                $('body').css('overflow', 'auto');
            }
        });
        
        // –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ —É–¥–∞–ª–µ–Ω–∏—è
        $('#confirmDelete').click(function(e){
            e.preventDefault();
            
            const button = $(this);
            button.prop('disabled', true);
            button.html('<span class="loading-spinner"></span> –£–¥–∞–ª–µ–Ω–∏–µ...');
            
            $.ajax({
                type: 'DELETE',
                contentType: 'application/json',
                url: '/users/delete/' + userId,
                dataType: 'JSON'
            }).done(function( response ) {
                if (response.msg === '') {
                    alert('–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª—ë–Ω');
                    window.location.href = '/users';
                }
                else {
                    alert(response.msg);
                    $('#deleteConfirmModal').hide();
                    $('body').css('overflow', 'auto');
                }
            }).fail(function(xhr, status, error) {
                console.error('Error:', error);
                alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ' + error);
            }).always(function() {
                button.prop('disabled', false);
                button.text('–£–¥–∞–ª–∏—Ç—å');
            });
        });
        
        // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ ESC
        $(document).keydown(function(event){
            if (event.key === 'Escape' && $('#deleteConfirmModal').is(':visible')) {
                $('#deleteConfirmModal').hide();
                $('body').css('overflow', 'auto');
            }
        });
        
        // –°—Ç–∏–ª—å –¥–ª—è –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä–∞ –∑–∞–≥—Ä—É–∑–∫–∏
        const style = document.createElement('style');
        style.textContent = `
            .loading-spinner {
                display: inline-block;
                width: 16px;
                height: 16px;
                border: 2px solid rgba(255,255,255,.3);
                border-radius: 50%;
                border-top-color: #fff;
                animation: spin 1s ease-in-out infinite;
                margin-right: 8px;
                vertical-align: middle;
            }
            
            @keyframes spin {
                to { transform: rotate(360deg); }
            }
            
            .info-card {
                background: #f8f9fa;
                border-radius: 8px;
                padding: 20px;
                margin-bottom: 20px;
                border-left: 4px solid #007bff;
            }
            
            .section-subtitle {
                color: #333;
