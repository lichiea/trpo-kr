      /* Модальное окно */
      .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0px;
        width: 100%;
        height: 100%;
      }
      
      .modal-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        backdrop-filter: blur(5px);
      }
      
      .modal-content {
        position: relative;
        background: white;
        width: 90%;
        height: 95%;
        max-width: 400px;
        margin: 10px auto;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        animation: modalSlide 0.3s ease;
      }
      
      @keyframes modalSlide {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .modal-header {
        background: var(--primary-color);
        color: white;
        padding: 20px;
        text-align: center;
        position: relative;
      }
      
      .modal-header h2 {
        color: white;
        margin: 0;
        font-size: 24px;
      }
      
      .modal-close {
        position: absolute;
        top: 20px;
        right: 20px;
        background: none;
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.3s ease;
      }
      
      .modal-close:hover {
        background: rgba(255,255,255,0.1);
      }
      
      .modal-body {
        padding: 40px;
      }
      
