    // Стили для панели управления и остальных элементов
    style.
      /* Стили для панели управления с 9 вкладками */
      /* Панель управления */
      .dashboard {
        background: var(--gray-color);
      }
    
      .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin-top: 40px;
      }
    
      .dashboard-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        display: block;
        color: inherit;
      }
    
      .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        color: var(--primary-color);
      }
    
      .dashboard-icon {
        font-size: 40px;
        color: var(--primary-color);
        margin-bottom: 20px;
      }
    
      .dashboard-card h3 {
        margin-bottom: 10px;
      }
    
      .dashboard-card p {
        font-size: 14px;
        color: var(--text-light);
      }

      .footer {
        background: var(--gray-color);
        padding: 60px 0 30px;
      }
    
      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        margin-bottom: 40px;
      }
    
      .footer-section h4 {
        margin-bottom: 20px;
        color: var(--primary-color);
      }
    
      .footer-section ul {
        list-style: none;
      }
    
      .footer-section li {
        margin-bottom: 10px;
      }
    
      .footer-section a:hover {
        color: var(--primary-color);
      }
    
      .subscribe-form {
        display: flex;
        gap: 10px;
        margin-top: 15px;
      }
    
      .subscribe-form input {
        flex: 1;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
      }
    
      .footer-bottom {
        text-align: center;
        padding-top: 30px;
        border-top: 1px solid #ddd;
        color: var(--text-light);
      }
    
      .footer-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 15px;
      }
        
      .copyright {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid rgba(255,255,255,0.1);
        color: #bdc3c7;
        font-size: 14px;
