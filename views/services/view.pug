      background-color: #f8f9fa;
    }
    
    .status-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
    }
    
    .status-badge.active {
      background: #d4edda;
      color: #155724;
    }
    
    .status-badge.inactive {
      background: #f8d7da;
      color: #721c24;
    }
    
    .not-set {
      color: #999;
      font-style: italic;
    }
    
    /* Стили для иконок в заголовках */
    .section-title i {
      margin-right: 10px;
      color: #007bff;
    }
    
    /* Адаптивность */
    @media (max-width: 768px) {
      .price-content {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .price-amount {
        font-size: 2rem;
      }
      
      .pricelist-table {
        overflow-x: auto;
      }
      
      .pricelist-table table {
        min-width: 600px;
      }
    }
    
    @media (max-width: 480px) {
      .price-card {
        padding: 20px 15px;
      }
      
      .price-amount {
        font-size: 1.8rem;
      }
    }