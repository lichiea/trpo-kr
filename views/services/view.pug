extends ../layout

block content

  // Первое навигационное поле
  header.header
    .container
      .header-content
        a.logo(href='/')
          i.fas.fa-spray-can
          span Клининговая компания

  .page-container
    .navigation-links
      a.back-link(href='/services') ← Назад к каталогу услуг
    
    .content-card
      .profile-header
        h1.page-title= title
  
      .profile-content
        form#serviceForm.profile-form
          .form-section
            h2.section-title Основная информация
            
            .form-grid
              .form-group
                label(for="editlabel") Название услуги:
                if can_view_services
                  input#editlabel(type='text', value=service.label, name="label")
                else
                  .form-value= service.label
              
              .form-group
                label(for="editdescription") Описание:
                if can_view_services
                  textarea#editdescription(name="description")= service.description
                else
                  .form-value= service.description
              
              .form-group
                label(for="editid_equip") Оборудование:
                if can_view_services
                  select#editid_equip(name="id_equip")
                    option(value="") Не выбрано
                    each equipment in equipments
                      option(value=equipment.id, selected=(equipment.id == service.id_equip))= equipment.label
                else
                  .form-value= equipmentInfo ? equipmentInfo.equip_label : 'Не назначено'

              .form-actions
                .buttons-row
                  if can_view_services
                    button.primary-button#editSaveButton(type="button") Сохранить изменения
                    button.danger-button#deleteButton(type="button") Удалить услугу
                  else
                    .no-permission-message У вас нет прав для редактирования услуги

        // Блок с информацией об оборудовании
        if equipmentInfo
          .info-section
            h2.section-title Информация об оборудовании
            
            .info-grid
              .info-item
                .info-label ID оборудования:
                .info-value= equipmentInfo.equip_id
              .info-item
                .info-label Название:
                .info-value= equipmentInfo.equip_label || 'Не указано'
              .info-item
                .info-label Описание:
                .info-value= equipmentInfo.equip_description || 'Не указано'
        else if service.id_equip
          .info-section
            .info-card
              .empty-message Оборудование с ID #{service.id_equip} не найдено в базе данных
        else
          .info-section
            .info-card
              .empty-message Для этой услуги не назначено оборудование

        // Блок с текущей ценой
        .info-section
          h2.section-title 
            i.fas.fa-tag
            span Текущая цена
          
          if currentPrice && activePricelist
            .price-card.current-price
              .price-badge Текущая
              .price-content
                .price-amount= currentPrice.price + ' ₽'
                .price-info
                  .price-label По прейскуранту: 
                    strong= activePricelist.label
      
          else
            .info-card
              .empty-message
                i.fas.fa-exclamation-circle
                p Для этой услуги не установлена цена в активном прейскуранте

        // Блок с историей цен
        if priceHistory && priceHistory.length > 0
          .info-section
            h2.section-title
              i.fas.fa-history
              span История цен
            
            .pricelist-table
              table.data-table
                thead
                  tr
                    th Прейскурант
                    th Цена (₽)
                    th Статус
                tbody
                  each priceItem in priceHistory
                    tr(class=priceItem.isactive ? 'active-price' : '')
                      td= priceItem.pricelist_label
                      td
                        if priceItem.price
                          strong= priceItem.price
                        else
                          span.not-set Не установлена
                      td
                        if priceItem.isactive
                          span.status-badge.active Активный
                        else
                          span.status-badge.inactive Не активен
        else
          .info-section
            .info-card
              .empty-message
                i.fas.fa-history
                p История цен для этой услуги отсутствует

    #deleteConfirmModal.modal-window(style="display: none;")
      .modal-content
        .modal-header
          h3 Подтверждение удаления
          button.modal-close#deleteModalClose ×
        .modal-body
          .warning-message
            .warning-icon ⚠️
            .warning-text
              h4 Вы уверены, что хотите удалить услугу?
              p
                strong= service.label
              p Это действие нельзя отменить. Все данные услуги будут удалены безвозвратно.
              if currentPrice
                p 
                  strong Внимание: 
                  | Эта услуга имеет установленную цену в прейскурантах
        .modal-footer
          button.secondary-button#cancelDelete Отмена
          button.danger-button#confirmDelete Удалить

  script.
    document.addEventListener('DOMContentLoaded', function() {
      const saveButton = document.getElementById('editSaveButton');
      const deleteButton = document.getElementById('deleteButton');
      const deleteModal = document.getElementById('deleteConfirmModal');
      const deleteModalClose = document.getElementById('deleteModalClose');
      const cancelDeleteButton = document.getElementById('cancelDelete');
      const confirmDeleteButton = document.getElementById('confirmDelete');

      const pathSegments = window.location.pathname.split('/');
      const serviceId = pathSegments[pathSegments.length - 1];

      function closeDeleteModal() {
        if (deleteModal) {
          deleteModal.style.display = 'none';
          document.body.style.overflow = 'auto';
        }
      }

      if (saveButton) {
        saveButton.addEventListener('click', async function() {
          const formData = {
            label: document.getElementById('editlabel').value.trim(),
            description: document.getElementById('editdescription').value.trim(),
            id_equip: document.getElementById('editid_equip').value.trim()
          };

          if (!formData.label) {
            alert('Название услуги обязательно');
            return;
          }

          if (formData.id_equip && formData.id_equip !== '') {
            formData.id_equip = parseInt(formData.id_equip);
            if (isNaN(formData.id_equip)) {
              alert('Ошибка выбора оборудования');
              return;
            }
          } else {
            formData.id_equip = null;
          }

          saveButton.disabled = true;
          saveButton.textContent = 'Сохранение...';

          try {
            const response = await fetch(`/services/update/${serviceId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData)
            });

            const data = await response.json();

            if (data.msg === '') {
              alert('Данные услуги успешно обновлены');
            } else {
              alert('Ошибка: ' + data.msg);
            }

          } catch (error) {
            console.error('Error:', error);
            alert('Ошибка при обновлении данных');
          } finally {
            saveButton.disabled = false;
            saveButton.textContent = 'Сохранить изменения';
          }
        });
      }

      if (deleteButton) {
        deleteButton.addEventListener('click', function() {
          if (deleteModal) {
            deleteModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
          }
        });
      }

      if (deleteModalClose) {
        deleteModalClose.addEventListener('click', closeDeleteModal);
      }

      if (cancelDeleteButton) {
        cancelDeleteButton.addEventListener('click', closeDeleteModal);
      }

      if (deleteModal) {
        deleteModal.addEventListener('click', function(event) {
          if (event.target === deleteModal) {
            closeDeleteModal();
          }
        });
      }

      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && deleteModal && deleteModal.style.display === 'flex') {
          closeDeleteModal();
        }
      });

      if (confirmDeleteButton) {
        confirmDeleteButton.addEventListener('click', async function() {
          confirmDeleteButton.disabled = true;
          confirmDeleteButton.textContent = 'Удаление...';

          try {
            const response = await fetch(`/services/delete/${serviceId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
              }
            });

            const data = await response.json();

            if (data.msg === '') {
              alert('Услуга успешно удалена');
              window.location.href = '/services';
            } else {
              alert('Ошибка: ' + data.msg);
              closeDeleteModal();
            }

          } catch (error) {
            console.error('Error:', error);
            alert('Ошибка при удалении услуги');
          } finally {
            confirmDeleteButton.disabled = false;
            confirmDeleteButton.textContent = 'Удалить';
          }
        });
      }
    });

