    .form-note {
      background: #f0f7ff;
      border: 1px solid #c5d9f1;
      border-radius: 4px;
      padding: 12px 15px;
      margin-top: 20px;
      font-size: 14px;
      color: #2c3e50;
    }

    .form-note p {
      margin: 0;
    }

