extends ../layout

block content

  // Первое навигационное поле
  header.header
    .container
      .header-content
        a.logo(href='/')
          i.fas.fa-spray-can
          span Клининговая компания

  .page-container
    h1.page-title= title
    
    // Панель фильтрации и поиска
    .filter-panel
      form.filter-form(action="/employees", method="GET")
        .filter-grid
          .filter-group
            label.filter-label(for="search") Поиск по ФИО:
            .search-box
              input.search-input(
                type="text", 
                id="search", 
                name="search", 
                placeholder="Введите ФИО...",
                value=current_search || ''
              )
              button.search-button(type="submit")
                i.fas.fa-search
        
          .filter-group
            label.filter-label(for="role") Фильтр по роли:
            select.filter-select(id="role", name="role")
              option(value="all") Все роли
              each role in roles
                option(
                  value=role, 
                  selected=(current_role === role)
                )= role
        
          .filter-actions
            button.primary-button(type="submit") Применить
            a.primary1-button(href="/employees") Сбросить
    
    if can_view_employees
      .actions-panel
        button.primary-button(id='create_employee') Создать сотрудника
    
    .content-card
      if employees && employees.length > 0
        .results-info
          span Найдено сотрудников: #{employees.length}
          if current_search || current_role && current_role !== 'all'
            span.filter-tags
              if current_search
                .filter-tag
                  span Поиск: "#{current_search}"
                  a.remove-filter(href=`/employees?role=${current_role || 'all'}`) ×
              if current_role && current_role !== 'all'
                .filter-tag
                  span Роль: #{current_role}
                  a.remove-filter(href=`/employees?search=${current_search || ''}`) ×
        
        .table-container
          table.data-table
            thead
              tr 
                th ID
                th ФИО
                th Телефон
                th Email
                th Должность
                th Специализация
                th Роль
            tbody
              each employee in employees
                tr
                  td
                    a(href='/employees/' + employee.id)= employee.id
                  td
                    a(href='/employees/' + employee.id)= employee.fio
                  td= employee.phone
                  td= employee.email
                  td= employee.position_d
                  td= employee.specialization
                  td
                    .role-badge(class=employee.roleClass)= employee.user_role || '-'
      else
        .empty-state
          if current_search || (current_role && current_role !== 'all')
            p Нет сотрудников, соответствующих критериям поиска
            a.secondary-button(href="/employees") Показать всех сотрудников
          else
            p Нет сотрудников в базе данных

    // Модальное окно для создания сотрудника
    div#create_employee_popup.modal-window(style="display:none")
      .modal-content
        .modal-header
          h3 Создать сотрудника
          button.modal-close#create_employee_popup_close ×
        .modal-body
          form.modal-form#createEmployeeForm
            .form-group
              label(for="inpfio") ФИО *
              input#inpfio(type="text" placeholder="Иванов И. И.")
            
            .form-group
              label(for="inpphone") Телефон *
              input#inpphone(type="text" placeholder="89371234567")
            
            .form-group
              label(for="inpemail") Email
              input#inpemail(type="email" placeholder="employee@example.com")
            
            .form-group
              label(for="inpposition_d") Должность *
              input#inpposition_d(type="text" placeholder="Старший клинер")
            
            .form-group
              label(for="inpspecialization") Специализация
              input#inpspecialization(type="text" placeholder="Клинер офисных помещений")
            
            .form-group
              label(for="inplogin") Логин (для входа в систему) *
              input#inplogin(type="text" placeholder="employee123")
            
            .form-group
              label(for="inppass") Пароль *
              input#inppass(type="password" placeholder="********")
            
            .form-group
              label(for="inpid_role") Роль сотрудника *
              select#inpid_role(name="id_role")
                option(value="") Выберите роль
                each role in roles
                  option(value=role)= role
        .modal-footer
          button.secondary-button#cancel_create_employee Отменить
          button.primary-button#submit_create_employee Создать

  script(src="https://code.jquery.com/jquery-3.6.0.min.js")
  script.
    $(document).ready(function(){
        $('#create_employee').click(function(e){
            $('#create_employee_popup').show()
        })

        $('#create_employee_popup_close').click(function(e){
            $('#create_employee_popup').hide()
            clearForm()
        })

        $('#cancel_create_employee').click(function(e){
            $('#create_employee_popup').hide()
            clearForm()
        })

        function clearForm() {
            $('#inpfio').val('')
            $('#inpphone').val('')
            $('#inpemail').val('')
            $('#inpposition_d').val('')
            $('#inpspecialization').val('')
            $('#inplogin').val('')
            $('#inppass').val('')
            $('#inpid_role').val('')
        }

        $('#submit_create_employee').click(function(e){
            e.preventDefault()

            let data = {
                fio: $('#inpfio').val(),
                phone: $('#inpphone').val(),
                email: $('#inpemail').val(),
                position_d: $('#inpposition_d').val(),
                specialization: $('#inpspecialization').val(),
                login: $('#inplogin').val(),
                pass: $('#inppass').val(),
                id_role: $('#inpid_role').val()
            };

            // Валидация
            if (!data.fio || !data.phone || !data.position_d || !data.login || !data.pass || !data.id_role) {
                alert('Пожалуйста, заполните все обязательные поля (ФИО, телефон, должность, логин, пароль и роль)');
                return;
            }

            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: '/employees/create',
                dataType: 'JSON'
            }).done(function( response ) {
                if (response.msg === '') {
                    alert('Сотрудник создан')
                    window.location.reload()
                }
                else {
                    alert(response.msg)
                }
            }).fail(function(xhr, status, error) {
                console.error('Error:', error);
                alert('Ошибка при создании сотрудника: ' + error);
            });
        });

        window.addEventListener('click', function(event) {
            const popup = document.getElementById('create_employee_popup');
            if (event.target === popup) {
                popup.style.display = 'none';
                clearForm();
            }
        });
        
        // Автосабмит при изменении селекта роли
        $('#role').change(function() {
            if ($(this).val() !== 'all') {
                $('.filter-form').submit();
            }
        });
    });


